# ===========================================
# Сопровод v4.0 - Environment Variables
# ===========================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOPqrstuVWXyz
BOT_USERNAME=your_bot_username

# AI Configuration
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
AI_PROVIDER=openai
OPENAI_TIMEOUT=120

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=DEBUG

# === НАСТРОЙКИ АНАЛИТИКИ (SUPABASE) ===
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
ANALYTICS_ENABLED=true

# === НАСТРОЙКИ АЛГОРИТМА АНАЛИЗА v6.0 ===
USE_UNIFIED_ANALYSIS=true

# === НАСТРОЙКИ СИСТЕМЫ ПОДПИСОК v7.0 ===
SUBSCRIPTIONS_ENABLED=true
FREE_LETTERS_LIMIT=3
PREMIUM_LETTERS_LIMIT=20

# === НАСТРОЙКИ БЕЗОПАСНОСТИ v9.2 ===
RATE_LIMITING_ENABLED=true
ADMIN_TELEGRAM_IDS=123456789,987654321
RATE_LIMIT_COMMANDS_PER_MINUTE=5
RATE_LIMIT_AI_PER_5MIN=3
MAX_TEXT_SIZE_KB=50

# === НАСТРОЙКИ ЮKASSA v10.1 ===
YOOKASSA_SHOP_ID=your_shop_id_here
YOOKASSA_SECRET_KEY=your_secret_key_here
YOOKASSA_ENABLED=false
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000
WEBHOOK_PATH=/webhook/yookassa 